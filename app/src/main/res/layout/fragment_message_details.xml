<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="HardcodedText">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?backgroundSecondaryColor"
            android:elevation="4dp"
            tools:ignore="UnusedAttribute,RtlHardcoded">

            <TextView
                android:id="@+id/textView1"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textTitleHolder"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Tytuł"
                tools:drawableLeft="@drawable/ic_short_text"
                tools:drawableTint="?android:textColorPrimary" />

            <FrameLayout
                android:id="@+id/textTitleHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/textView1"
                android:minHeight="40dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/textTitle"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right|center_vertical"
                    tools:ignore="RtlSymmetry"
                    tools:text="To jest tytuł wiadmości wiadmości" />
            </FrameLayout>

            <View
                android:id="@+id/separator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textTitleHolder"
                android:background="#AAA" />


            <TextView
                android:id="@+id/textView2"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator1"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Nadawca"
                tools:drawableLeft="@drawable/ic_person"
                tools:drawableTint="?android:textColorPrimary" />

            <TextView
                android:id="@+id/textSender"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView2"
                android:layout_alignBottom="@id/textView2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/textView2"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:padding="4dp"
                tools:text="Jan Kowalski" />

            <View
                android:id="@+id/separator2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textView2"
                android:background="#AAA" />


            <TextView
                android:id="@+id/textView3"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator2"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Wysłano"
                tools:drawableLeft="@drawable/ic_access_time"
                tools:drawableTint="?android:textColorPrimary" />

            <TextView
                android:id="@+id/textDate"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView3"
                android:layout_alignBottom="@id/textView3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/textView3"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:padding="4dp"
                tools:text="2018-09-01 21:37:69" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textContent"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:autoLink="web|email|phone"
                android:linksClickable="true"
                android:paddingBottom="32dp"
                android:text="Lorem ipsum dolor \nsit amet, consectetur adipiscing elit.\n\n Morbi posuere diam sit amet rhoncus venenatis."
                tools:ignore="RtlHardcoded"
                android:textIsSelectable = "true" />
        </ScrollView>
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="Odpowiedź"
        app:srcCompat="@drawable/ic_reply"
        app:fabCustomSize="1dp"
        app:fabSize="normal"
        tools:ignore="RtlHardcoded" />
    <!--48dp-->
</FrameLayout>