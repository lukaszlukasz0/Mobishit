<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="HardcodedText">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        app:autoSizeTextType="uniform"
        tools:text="Witaj Jakub" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="Od teraz otrzymasz powiadomienia o nowych ocenach, wiadomościach itp."
                android:textSize="16sp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/btnFinish"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:padding="20dp"
                android:text="Otwórz aplikację"
                android:textColor="#FFF"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="16dp"
                app:icon="@drawable/nav_log_out" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#AAA" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="Aplikacja będzie sprawdzała dane 2 razy dziennie.\n\nW ustawieniach aplikacji można zmienić jak często będą sprawdzane dane na serwerach mobireg."
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#AAA" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="Urządzenia Xiaomi, Honor i Huawei mają wbudowane agresywne opcje związane z usypianiem aplikacji w tle i oszczędzaniem energii. Może się to wiązać z pewnymi problemami, takimi jak brak powiadomień.\nhttps://www.google.com/search?q=brak+powiadomień+xiaomi"
                android:textSize="16sp"
                android:autoLink="web" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#AAA" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>